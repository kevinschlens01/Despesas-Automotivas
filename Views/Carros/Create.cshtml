@model DespesasAutomotivas.Models.Carro

@{
    ViewData["Title"] = "Criar";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Cadastrando - Carro</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Modelo" class="form-label"></label>
                            <input asp-for="Modelo" class="form-control" />
                            <span asp-validation-for="Modelo" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Marca" class="form-label"></label>
                            <input asp-for="Marca" class="form-control" />
                            <span asp-validation-for="Marca" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Ano" class="form-label"></label>
                            <input asp-for="Ano" class="form-control" />
                            <span asp-validation-for="Ano" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Versao" class="form-label"></label>
                            <input asp-for="Versao" class="form-control" />
                            <span asp-validation-for="Versao" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Quilometragem" class="form-label"></label>
                            <input asp-for="Quilometragem" class="form-control" />
                            <span asp-validation-for="Quilometragem" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Placa" class="form-label"></label>
                            <input asp-for="Placa" class="form-control" />
                            <span asp-validation-for="Placa" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Cor" class="form-label"></label>
                            <input asp-for="Cor" class="form-control" />
                            <span asp-validation-for="Cor" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Criar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
