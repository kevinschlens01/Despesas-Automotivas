@model IEnumerable<DespesasAutomotivas.Models.Melhoria>

@{
    ViewData["Title"] = "Listagem - Melhorias";
}

<h1>Listagem - Melhorias</h1>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-success">Adicionar Nova</a>
</div>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Ações</th>
            <th>@Html.DisplayNameFor(model => model.First().NomePeca)</th>
            <th>@Html.DisplayName("Carro")</th>
            <th>@Html.DisplayName("Data da Avaliação")</th>
            <th>@Html.DisplayNameFor(model => model.First().Prioridade)</th>
            <th>@Html.DisplayNameFor(model => model.First().Status)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
                <td>@Html.DisplayFor(modelItem => item.NomePeca)</td>
                <td>@($"{item.Carro?.Nome} - {item.Carro?.Modelo}")</td>
                <td>@item.DataAvaliacao.ToShortDateString()</td>
                <td>@Html.DisplayFor(modelItem => item.Prioridade)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
            </tr>
        }
    </tbody>
</table>
