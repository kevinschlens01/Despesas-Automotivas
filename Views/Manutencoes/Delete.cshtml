@model DespesasAutomotivas.Models.Manutencoes

@{
    ViewData["Title"] = "Excluir";
}

<div class="container mt-4">
    <div class="alert alert-danger text-center fw-bold">
        <i class="bi bi-exclamation-triangle-fill"></i> Tem certeza de que deseja excluir esta manutenção?
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Manutenção - @Model.Carro?.Modelo</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Carro</dt>
                <dd class="col-sm-9">@Model.Carro?.Modelo</dd>

                <dt class="col-sm-3">Oficina</dt>
                <dd class="col-sm-9">@Model.Oficina?.Nome</dd>

                <dt class="col-sm-3">Descrição do Serviço</dt>
                <dd class="col-sm-9">@Model.DescricaoServico</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash3"></i> Excluir
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Voltar
            </a>
        </div>
    </div>
</div>
