@model DespesasAutomotivas.Models.Melhoria

@{
    ViewData["Title"] = "Excluir Melhoria";
}

<div class="container mt-4">
    <div class="alert alert-danger text-center fw-bold">
        <i class="bi bi-exclamation-triangle-fill"></i> Tem certeza de que deseja excluir esta melhoria?
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Melhoria - @Model.NomePeca</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome da Peça</dt>
                <dd class="col-sm-9">@Model.NomePeca</dd>

                <dt class="col-sm-3">Data da Avaliação</dt>
                <dd class="col-sm-9">@Model.DataAvaliacao.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Prioridade</dt>
                <dd class="col-sm-9">@Model.Prioridade</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Carro</dt>
                <dd class="col-sm-9">@Model.Carro?.Nome @Model.Carro?.Modelo</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash3"></i> Excluir
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Voltar
            </a>
        </div>
    </div>
</div>
