@model DespesasAutomotivas.Models.Melhoria

@{
    ViewData["Title"] = "Nova Melhoria";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Cadastrando - Melhoria</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="NomePeca" class="form-label"></label>
                            <input asp-for="NomePeca" class="form-control" />
                            <span asp-validation-for="NomePeca" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CarroId" class="form-label">Carro</label>
                            <select asp-for="CarroId" asp-items="ViewBag.CarroId" class="form-select">
                                <option value="">Selecione um carro</option>
                            </select>
                            <span asp-validation-for="CarroId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DataAvaliacao" class="form-label"></label>
                            <input asp-for="DataAvaliacao" class="form-control" type="date" />
                            <span asp-validation-for="DataAvaliacao" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Prioridade" class="form-label"></label>
                            <select asp-for="Prioridade" class="form-select" asp-items="Html.GetEnumSelectList<Prioridade>()">
                                <option value="">Selecione uma prioridade</option>
                            </select>
                            <span asp-validation-for="Prioridade" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<StatusMelhoria>()">
                                <option value="">Selecione o status</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
