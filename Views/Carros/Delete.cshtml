@model DespesasAutomotivas.Models.Carro

@{
    ViewData["Title"] = "Excluir";
}

<div class="container mt-4">
    <div class="alert alert-danger text-center fw-bold">
        <i class="bi bi-exclamation-triangle-fill"></i> Tem certeza de que deseja excluir este carro?
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Carro - @Model.Modelo</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Model.Nome</dd>

                <dt class="col-sm-3">Modelo</dt>
                <dd class="col-sm-9">@Model.Modelo</dd>

                <dt class="col-sm-3">Marca</dt>
                <dd class="col-sm-9">@Model.Marca</dd>

                <dt class="col-sm-3">Ano</dt>
                <dd class="col-sm-9">@Model.Ano</dd>

                <dt class="col-sm-3">Versão</dt>
                <dd class="col-sm-9">@Model.Versao</dd>

                <dt class="col-sm-3">Quilometragem</dt>
                <dd class="col-sm-9">@Model.Quilometragem</dd>

                <dt class="col-sm-3">Placa</dt>
                <dd class="col-sm-9">@Model.Placa</dd>

                <dt class="col-sm-3">Cor</dt>
                <dd class="col-sm-9">@Model.Cor</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash3"></i> Excluir
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Voltar
            </a>
        </div>
    </div>
</div>
