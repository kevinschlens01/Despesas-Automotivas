@model IEnumerable<DespesasAutomotivas.Models.Oficina>

@{
    ViewData["Title"] = "Oficinas";
}

<h1>Listagem - Oficinas</h1>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-success">Criar Nova</a>
</div>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Ações</th>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Endereco)</th>
            <th>@Html.DisplayNameFor(model => model.Telefone)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Cnpj)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
                <td>@item.Nome</td>
                <td>@item.Endereco</td>
                <td>@item.Telefone</td>
                <td>@item.Email</td>
                <td>@item.Cnpj </td>
            </tr>
        }
    </tbody>
</table>
